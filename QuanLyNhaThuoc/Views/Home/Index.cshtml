    <style>
        .card-item {
            margin: 10px 20px;
        }

        .card {
            min-height: 300px;
            min-width: 250px;
            position: static;
            border: 3px double #808080;
            border-radius: 20px 30px 25px 30px / 20px 30px 25px 30px;
            padding: 10px 0px 10px 20px;
            display: flex;
        }

            .card:hover {
                transform: translateY(-10px);
                transition: 1s;
            }

            .card img {
                width: 80%;
                margin-top: 1px;
                cursor: pointer;
            }

        h5 {
            height: 50px;
        }

            h5 a {
                color: #000000;
                font-size: 15px;
                font: bold;
                text-decoration: none;
                display: block;
            }

        h6 {
            color: rgba(0,0,255,1);
            font-size: 15px;
            margin-left: 5px;
        }
        }
    </style>
</main>