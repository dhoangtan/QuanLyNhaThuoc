@model IEnumerable<QuanLyNhaThuoc.Models.SanPham>
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_LayoutSideBar.cshtml";
}
<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
<main>
    <div class="banner">
        <div class="col-2">
            <img src="~/Content/Images/banner.png" alt="banner-img" />
        </div>
        <div class="col-2">
            <h1>Nhà thuốc NewTyStore </h1>
            <h1>Chung tay vì sức khỏe cộng đồng</h1>
        </div>
    </div>
    <div class="small-container">
        @foreach (var item in Model)
        {
                <div class="col-4">
                    <img src="@Html.DisplayFor(modelItem => item.MoTa)" alt="" srcset="" />
                    <h5>@Html.ActionLink("" + @Html.DisplayFor(modelItem => item.TenSanPham) , "Details", new { id = item.MaSanPham})</h5>
                    <h6>@Html.DisplayFor(modelItem => item.GiaBan)đ/@Html.DisplayFor(modelItem => item.DonViTinh) </h6>
                    <h6>Số lượng còn: @Html.DisplayFor(modelItem => item.SoLuong)</h6>
                    <div class="rating">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star-o"></i>
                    </div>
                </div>
        }
    </div>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: "Poppins", sans-serif;
        }
        .banner {
            background: rgb(2,0,36);
            background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(0,212,255,1) 0%, rgba(0,0,255,1) 80%);
            display: flex;
            align-items: center;
            flex-wrap: wrap;
            justify-content: space-around;
            width: 100%;
            min-width:450px;
        }

        .col-2 {
            flex-basis: 50%;
            min-width: 400px;
        }
            .col-2 img {
                margin-left:50px;
                max-width: 70%;
                height:300px;
                padding: 20px 10px;
            }

            .col-2 h1 {
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                margin-right: 50px;
                font-size: 25px;
                color: white;
                text-align: center;
                min-width: 400px;
            }
   
        .small-container {
            margin: 70px 0;
            display: flex;
            justify-content: space-around;
            align-items: center;
            flex-wrap: wrap;
        }
        .col-4 {
            margin: 5px 5px;
            flex-basis: 23%;
            padding: 5px 20px;
            min-width: 200px;
            margin-bottom: 30px;
            transition: transform 0.6s;
            width: 200px;
            height: 300px;
            background: white;
            border: 5px double #1559b2;
            display: flex;
            flex-direction: column;
            border-radius: 20% 30% 10% 30% / 20% 30% 10% 30%;
            justify-content:center;
            align-items:center;
        }

            .col-4 img {
                width: 65%;
                margin-top: 5px;
                border-radius: 50% 50% 50% 50% / 25% 25% 25% 25%;
            }

            .col-4:hover {
                transform: translateY(-20px);
            }
        h5 a{
            color: #000000;
            font-size: 15px;
            text-decoration:none;
        }
        h6{
            color: rgba(0,0,255,1);
            font-size:15px;
        }
        .rating .fa {
            color: #ff523b;
        }
    </style>
</main>