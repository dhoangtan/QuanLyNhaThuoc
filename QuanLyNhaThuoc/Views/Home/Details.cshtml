@model QuanLyNhaThuoc.Models.SanPham

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <div class="banner">
        <div class="col-2">
            <img src="~/Content/Images/banner.png" alt="banner-img" />
        </div>
        <div class="col-2">
            <h1>Nhà thuốc NewTyStore </h1>
            <h1>Chung tay vì sức khỏe cộng đồng</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <div>
                <img src="@Html.DisplayFor(model => model.MoTa)" />
            </div>
        </div>
        <div class="col-8">
            <h2>@Html.DisplayFor(model => model.TenSanPham)</h2>
            <hr />
            <h3>@Html.DisplayFor(model => model.GiaBan)đ/@Html.DisplayFor(model => model.DonViTinh)</h3>
            <h5>Loại sản phẩm: @Html.DisplayFor(model => model.LoaiSanPham.TenLoai) </h5>
            <h5>Thành phần chính: @Html.DisplayFor(model => model.ThanhPhanChinh) </h5>
            <h5>Độ tuổi: @Html.DisplayFor(model => model.DoTuoi) </h5>
            <h5>Công dụng: @Html.DisplayFor(model => model.CongDung) </h5>
            <h5>Số lượng: @Html.DisplayFor(model => model.SoLuong) </h5>
            <h5>Nhà sản xuất: @Html.DisplayFor(model => model.NhaSanXuat.TenNhaSanXuat) </h5>
        </div>
    </div>
    <button onclick="location.href='@Url.Action("Index", "Home" )'" class="btn btn-primary" type="button">Back</button>
</div>
<style>
    .banner {
        background: rgb(2,0,36);
        background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(0,212,255,1) 0%, rgba(0,0,255,1) 80%);
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        justify-content: space-around;
        width: 100%;
        min-width: 450px;
    }

    .col-2 {
        flex-basis: 50%;
        min-width: 400px;
    }

        .col-2 img {
            margin-left: 50px;
            max-width: 70%;
            height: 300px;
            padding: 20px 10px;
        }

        .col-2 h1 {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin-right: 50px;
            font-size: 25px;
            color: white;
            text-align: center;
            min-width: 400px;
        }
    .row {
        width: 65%;
        margin-top: 10px;
        margin-left: 10%;
        padding: 30px 20px;
        background: #ffffff;
        border-radius: 5px;
        border: 5px double #1559b2;
    }

    .col-4 img {
        width: 95%;
    }

    .col-8 h2 {
        color: #4800ff;
    }

    .col-8 h3 {
        margin-left: 20px;
        color: #ff6a00;
    }

    .col-8 h5 {
        display: block;
    }
</style>