<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-danger">
        <div class="container">
            @Html.ActionLink("NewTyStore", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "btn btn-danger" })</li>
                    <li>@Html.ActionLink("Admin", "Index", "SanPhams", new { area = "" }, new { @class = "btn btn-danger" })</li>
                    @*<li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "btn btn-danger" })</li>*@
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="banner">
    <div class="col-2">
        <img src="~/Content/Images/banner.png" alt="banner-img" />
    </div>
    <div class="col-2">
        <h1>Nhà thuốc NewTyStore </h1>
        <h1>Chung tay vì sức khỏe cộng đồng</h1>
    </div>
</div>


    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            position: relative;
            min-height: 100vh;
            width: 100%;
        }

        .banner {
            background: rgb(2,0,36);
            background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(0,212,255,1) 0%, rgba(0,0,255,1) 80%);
            display: flex;
            align-items: center;
            flex-wrap: wrap;
            justify-content: space-around;
            width: 100%;
            min-width: 450px;
            box-shadow: 0px 20px 30px rgba(0, 0, 0, 0.15);
        }
        

        .col-2 {
            flex-basis: 50%;
            min-width: 400px;
        }

            .col-2 img {
                margin-left: 20%;
                max-width: 70%;
                height: 250px;
                padding: 20px 10px;
            }

            .col-2 h1 {
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                margin-right: 50px;
                font-size: 25px;
                color: white;
                text-align: center;
                min-width: 400px;
            }
    </style>
</body>
</html>
